<% if flash.any? %>
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1 messages">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %>
          <a class="close" data-dismiss="alert">&#215;</a>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
